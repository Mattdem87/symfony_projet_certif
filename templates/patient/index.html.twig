{% extends 'base.html.twig' %}

{% block title %}Listes des patients{% endblock %}

{% block body %}
    <h1>Patient</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Date_de_naissance</th>
                <th>Lieu_de_naissance</th>
                <th>Telephone</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for patient in patients %}
            <tr>
                <td>{{ patient.id }}</td>
                <td>{{ patient.nom }}</td>
                <td>{{ patient.prenom }}</td>
                <td>{{ patient.dateDeNaissance }}</td>
                <td>{{ patient.lieuDeNaissance }}</td>
                <td>{{ patient.telephone }}</td>
                <td>
                    <a class="btn btn-primary" href="{{ path('patient_show', {'id': patient.id}) }}">voir</a>
                    <a class="btn btn-warning" href="{{ path('patient_edit', {'id': patient.id}) }}">modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">Aucun enregistrement trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('patient_new') }}">Créer un patient</a>
{% endblock %}
